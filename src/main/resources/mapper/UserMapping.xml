        <collection property="permissionInfos" ofType="map" column="id" select="selectPermissions">
        </collection>
    </resultMap>

    <resultMap id="PermissionsResultMap" type="com.github.zk.spring.cloud.gateway.security.pojo.PermissionInfo">
